<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.StackLayout">
    <StackLayout>
        <BoxView Color="Green" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></BoxView>
        <BoxView Color="Blue" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></BoxView>
        <BoxView Color="Red" HeightRequest="75" VerticalOptions="End" HorizontalOptions="FillAndExpand"></BoxView>
        <Button Text="View Basket" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>